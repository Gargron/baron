<div class="container">

  <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      {{#linkTo 'index' class="navbar-brand"}}Baron{{/linkTo}}
    </div>

    <div class="collapse navbar-collapse">
      <form class="navbar-form navbar-right">
        {{#if currentUser}}
          {{currentUser.email}}
          <button {{action 'logout'}} class="btn btn-default">Logout</button>
        {{else}}
          <button {{action 'login'}} class="btn btn-primary">Login with Mozilla Persona</button>
        {{/if}}
      </form>
    </div>
  </nav>

  {{#if currentUser}}
    {{render 'calls'}}
    {{render 'requests'}}

    <div class="row">
      <div class="col-md-4">
        {{render 'contacts'}}
      </div>

      <div class="col-md-8">
        {{outlet}}
      </div>
    </div>
  {{else}}
    {{render 'index'}}
  {{/if}}

</div>
